	InMyArea("XACORWIN")
	InMyArea("XACORINV")
	GlobalLT("XA_LC_TakeCorwinGear", "GLOBAL", 1)
	GlobalLT("XA_LC_StartedInBG2", "GLOBAL", 1)
THEN
	RESPONSE #100
		SetInterrupt(FALSE)
		ActionOverride("XACORINV", TakeCreatureItems("Corwin", BACKPACK))
