IF
	Global("BD_SAVELOC","LOCALS",0)
	IsActive(Myself)
	!StateCheck(Myself,STATE_INVISIBLE)
THEN
	RESPONSE #100
		SetGlobal("BD_SAVELOC","LOCALS",1)
		SaveObjectLocation("LOCALS","BD_INLOC",Myself)
		SetSequence(SEQ_HEAD_TURN)
		Continue()
END

IF
	CheckSpellState(Myself,SPECTACLES_QUEST)
	IsActive(Myself)
	!NearSavedLocation(Myself,"BD_INLOC",15)
	!GlobalTimerNotExpired("BD_PWalk","LOCALS")
	!StateCheck(Myself,STATE_INVISIBLE)
THEN
	RESPONSE #100
		MoveToSavedLocationn("BD_INLOC","LOCALS")
END

