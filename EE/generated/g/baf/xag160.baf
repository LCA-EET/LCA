IF
	!CheckSpellState(Myself,SPECTACLES_QUEST)
	NumberOfTimesTalkedTo(0)
	Allegiance(Myself,NEUTRAL)
	!Name("BDXHOST",Myself)  // Xhost
THEN
	RESPONSE #100
		SetInterrupt(FALSE)
		SetPlayerSound(Myself,0,DIALOG_DEFAULT)  // <NO TEXT>
		SetPlayerSound(Myself,0,DIALOG_HOSTILE)  // <NO TEXT>
		FaceObject([PC])
		SmallWait(5)
		StartDialogueNoSet(Player1)
		SetInterrupt(TRUE)
END

