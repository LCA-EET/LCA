IF
	CheckSpellState(Myself,SPECTACLES_QUEST)
	HasItemEquipedReal("BDSPECTQ",Myself)  // Invisible
	HasItemEquiped("BDMISC01",Player1)  // Spectacles of Spectacle
	Range(Player1,23)
	IsActive(Myself)
THEN
	RESPONSE #100
		SetInterrupt(FALSE)
		SelectWeaponAbility(SLOT_WEAPON0,0)
		DisplayStringHead(Player1,50130)  // Through the Spectacles of Spectacle you catch sight of an otherworldly creature.
		SetInterrupt(TRUE)
END

