		SetGlobal("bd_search","locals",0)
		SetGlobalTimerRandom("bd_shout_timer","locals",9,THREE_MINUTES)
		SetGlobalTimer("bd_combat_timer","locals",TWO_ROUNDS)
		Continue()
END

