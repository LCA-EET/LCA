IF
	HPPercentLT(Myself, 100)
	GlobalLT("XA_LC_ParleyAttack", "GLOBAL", 1)
	InMyArea(Player1)
	GlobalLT("XA_LC_ConfrontNarzugon", "GLOBAL", 1)
THEN
	RESPONSE #100
		SetGlobal("XA_LC_ParleyAttack", "GLOBAL", 1)
END

//{ Block fight script if not hostile
IF 
	GlobalLT("XA_LC_NarzugonHostile", "LOCALS", 1)
THEN
	RESPONSE #100
		NoAction()
END
