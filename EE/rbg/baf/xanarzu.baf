//{ Apply Buffs When Hostile
IF
	Global("XA_LC_NarzugonHostile", "LOCALS", 1)
	GlobalGT("XA_LC_PrisonKnowledge", "GLOBAL", 2)
	GlobalLT("XA_LC_IncubusBuff", "LOCALS", 1)
THEN
	RESPONSE #100
		SetInterrupt(FALSE)
		SetGlobal("XA_LC_IncubusBuff", "LOCALS", 1)
		ClearActions(Myself)
		ReallyForceSpell(Myself, WIZARD_GLOBE_OF_INVULNERABILITY)
		ReallyForceSpell(Myself, WIZARD_STONE_SKIN)
		SetInterrupt(TRUE)
		Continue()
END

IF
	Global("XA_LC_NarzugonHostile", "LOCALS", 1)
	GlobalLT("XA_LC_PrisonKnowledge", "GLOBAL", 3)
	GlobalLT("XA_LC_IncubusBuff", "LOCALS", 1)
THEN
	RESPONSE #100
		SetInterrupt(FALSE)
		SetGlobal("XA_LC_IncubusBuff", "LOCALS", 1)
		ClearActions(Myself)
		ReallyForceSpell(Myself, WIZARD_GLOBE_OF_INVULNERABILITY)
		ReallyForceSpell(Myself, WIZARD_MIRROR_IMAGE)
		ReallyForceSpell(Myself, WIZARD_STONE_SKIN)
		ReallyForceSpell(Myself, WIZARD_SHIELD)
		
		SetInterrupt(TRUE)
		Continue()
END
