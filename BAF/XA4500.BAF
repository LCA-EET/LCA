	IsValidForPartyDialogue("Sarevok")
	GlobalLT("XA_AvernusChat", "GLOBAL", 1)
THEN
	RESPONSE #100
		SetGlobal("XA_AvernusChat", "GLOBAL", 1)
		Wait(3)
		ActionOverride("Sarevok", StartDialog("SAREV25J", Player1))
END

