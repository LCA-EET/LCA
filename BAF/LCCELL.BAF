IF 
	See(Player1)
	Range(Player1, 7)
	Global("LCA_SoDAnxiety", "GLOBAL", 0)
	Global("LCA_SoDAnxietyCell", "GLOBAL", 1)
THEN
	RESPONSE #100
		SetGlobal("LCA_SoDAnxietyCell", "GLOBAL", 1)
		ActionOverride(Player1, StartDialog("PLAYER1", Myself))
END

IF 
	!Global("LCA_SoDAnxiety", "GLOBAL", 0)
THEN
	RESPONSE #100
		DestroySelf()
END