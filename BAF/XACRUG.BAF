IF
	GlobalLT("XA_Hidden", "LOCALS", 1)
	GlobalLT("XA_CaelarRescue", "GLOBAL", 1)
THEN
	RESPONSE #100
		SetInterrupt(FALSE)
		ApplySpellRES("bdhide", Myself)
		SetGlobal("XA_Hidden", "LOCALS", 1)
		SetInterrupt(TRUE)
		Continue()
END

