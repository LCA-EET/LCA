IF
	Name("XAASHASP")
	Global("XA_OathRelease", "GLOBAL", 1)
THEN
	RESPONSE #100
		SetInterrupt(FALSE)
		SetGlobal("XA_DestroySelf", "LOCALS", 2)
		Wait(10)
		DisplayStringHead(Myself,@11)
		Wait(3)
		AddexperienceParty(15000)
		SetGlobal("XA_CrusadersGone", "GLOBAL", 1)
