IF
	Global("XA_ReturnToBG", "GLOBAL", 1)
	GlobalLT("XA_CloseDoors", "BG1200", 1)
THEN
	RESPONSE #100
		CloseDoor("Door01")
		CloseDoor("Door0616")
		CloseDoor("Door1201")
		CloseDoor("Door1203")
		CloseDoor("Door1205")
		CloseDoor("Door1207")
		CloseDoor("Door1208")
		CloseDoor("Door1209")
		CloseDoor("Door1211")
		CloseDoor("Door1213")
		CloseDoor("Door1215")
