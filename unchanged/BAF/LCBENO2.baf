IF
	Global("LCA_ApproachBeno", "GLOBAL", 1)
	Range(Player1,5)
THEN
	RESPONSE #100
		ActionOverride(Player1, FaceObject("LCBENO2")
		Wait(1)
		StartDialog("LCBENO2", Player1)
END

IF 
	Global("LCA_ApproachBeno", "GLOBAL", 1)
	!Range(Player1,5)
THEN
	RESPONSE #100
		ActionOverride(Player1, MoveToObject("TrigBeno"))
END