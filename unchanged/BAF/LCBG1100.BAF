IF
	Global("LCA_ReturnToBG", "GLOBAL", 1)
	InMyArea("kaella")
THEN
	RESPONSE #100
		ActionOverride("kaella", DestroySelf())
		Continue()
END

IF 
	Global("LCA_ReturnToBG", "GLOBAL", 1)
	!Global("LCA_Door0601Deactivated", "GLOBAL", 1) //Door to Seven Suns
THEN
	RESPONSE #100
		TriggerActivation("Door0601",FALSE)
		SetGlobal("LCA_Door0601Deactivated", "GLOBAL", 1)
		Continue()
END

